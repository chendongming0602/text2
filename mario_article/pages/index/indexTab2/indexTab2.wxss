@import '/utils/css/all.wxss';
.scroll-box {
  display: block;
  height: 100vh;
  width: 100vw;
  position: relative;
  /* background: #fff; */
}

.pulldown-loadng {
  display: flex;
  align-items: center;
  justify-content: center;
  background:#efefef;
}

.loading-icon {
  width: 200rpx;
  height: 200rpx;
}
.loading-icon-text{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #D61313;
  width: 100%;
  font-weight: bold;
  height: 140rpx;
}
.loading-icon-text image{
  width: 40rpx;
  height: 37rpx;
  margin-right: 10rpx;
}

@keyframes loadingImg{
  0%{
    transform: rotate(0deg);
  }
  100%{
    transform: rotate(360deg);
  }
}
.loadingImg{
  animation: loadingImg .5s linear infinite;
}

