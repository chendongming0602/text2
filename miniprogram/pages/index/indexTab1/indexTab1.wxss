@import '/utils/css/all.wxss';

.scroll-box {
  display: block;
  height: 100vh;
  width: 100vw;
  position: relative;
}

.pulldown-loadng {
  display: flex;
  align-items: center;
  justify-content: center;
  background:#efefef;
}

.loading-icon {
  width: 200rpx;
  height: 200rpx;
}
.loading-icon-text{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #D61313;
  width: 100%;
  font-weight: bold;
  height: 140rpx;
}
.loading-icon-text image{
  width: 40rpx;
  height: 37rpx;
  margin-right: 10rpx;
}

@keyframes loadingImg{
  0%{
    transform: rotate(0deg);
  }
  100%{
    transform: rotate(360deg);
  }
}
.loadingImg{
  animation: loadingImg .5s linear infinite;
}

/* ****************************************** */
.newBox{
  padding-bottom: 96rpx;
}
.newTop{
  width: 100%;
  height: 444rpx;
  position: relative;
}
.newTop image{
  width: 100%;
  height: 100%;
}
.pic{
  width: 135rpx;
  height: 135rpx;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.picBox{
  margin: 0 auto;
  width: 172rpx;
  height: 172rpx;
  overflow: hidden;
  position: absolute;
  right: 40rpx;
  bottom: 36rpx;
}
.picBg{
  width: 100%;
  height: 172rpx;
  position: relative;

}
@keyframes picBgA{
  0%{
    transform: rotate(0);
  }
  100%{
    transform: rotate(360deg);
  }
}
.picBgA{
  animation: picBgA 10s linear infinite;
}

.tab1Title{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin-top: 25rpx; 
  
}
.tab1Title image{
  width: 66rpx;
  height: 34rpx;
}
.newContent{
  color: #D61313;
  font-size: 32rpx;
  font-weight: bold;
  margin: 0 15rpx;
}
