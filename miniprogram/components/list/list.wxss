.picBox{
  width: 242rpx;
  height: 242rpx;
  min-height:  242rpx;
  min-width:  242rpx;
  overflow: hidden;
  position: relative
}
.pic{
  width: 184rpx;
  height: 184rpx;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.picBg{
  width: 100%;
  height: 100%;
  position: relative;

}
@keyframes picBgA{
  0%{
    transform: rotate(0);
  }
  100%{
    transform: rotate(360deg);
  }
}
.picBgA{
  animation: picBgA 10s linear infinite;
}
